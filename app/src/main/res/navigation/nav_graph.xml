<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/mainFragment">
    <fragment
            android:id="@+id/firstFragment"
            android:name="com.jinvita.testfragment.FirstFragment"
            android:label="fragment_first"
            tools:layout="@layout/fragment_first">
        <action
                android:id="@+id/action_firstFragment_to_secondFragment"
                app:destination="@id/secondFragment"/>
    </fragment>
    <fragment
            android:id="@+id/mainFragment"
            android:name="com.jinvita.testfragment.MainFragment"
            android:label="fragment_main"
            tools:layout="@layout/fragment_main">
        <action
                android:id="@+id/action_mainFragment_to_secondFragment"
                app:destination="@id/secondFragment"/>
        <action
                android:id="@+id/action_mainFragment_to_firstFragment"
                app:destination="@id/firstFragment"/>
    </fragment>
    <fragment
            android:id="@+id/secondFragment"
            android:name="com.jinvita.testfragment.SecondFragment"
            android:label="fragment_register"
            tools:layout="@layout/fragment_second">
    </fragment>
</navigation>